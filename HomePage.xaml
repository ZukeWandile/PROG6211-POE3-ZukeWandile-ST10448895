<Page x:Class="demo2.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:demo2"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <!-- Full Background Image -->
        <Image Source="pack://application:,,,/Data/security_icon.png"
       Stretch="Fill"
       Panel.ZIndex="0"/>


        <!-- Dark Overlay for readability -->
        <Rectangle Fill="#AA000000" Panel.ZIndex="1"/>

        <!-- Content Overlay -->
        <StackPanel VerticalAlignment="Top" Margin="0,30,0,0" HorizontalAlignment="Center" Panel.ZIndex="2">
            <TextBlock Text="Welcome to Cyber Security Assistant"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Cyan"
                       TextAlignment="Center"/>
            <TextBlock Text="Your all-in-one tool for learning, securing, and staying safe online"
                       FontSize="16"
                       Foreground="LightGray"
                       Margin="0,10,0,0"
                       TextAlignment="Center"/>
        </StackPanel>

        

        <!-- Description Text -->
        <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="White"
                   Margin="60,0,60,90" VerticalAlignment="Bottom"
                   TextAlignment="Center" Panel.ZIndex="2">
            This assistant helps you understand key cyber security topics, stay protected with friendly guidance, 
            and test your knowledge through interactive quizzes. You can also manage your personal security goals 
            using the built-in task manager.
        </TextBlock>

        <!-- Footer -->
        <TextBlock Text="Select an option from the menu to get started"
                   Foreground="LightGray"
                   FontSize="14"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"
                   Panel.ZIndex="2"/>
    </Grid>
</Page>
